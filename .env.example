# Server Configuration
SERVER_PORT=9092
TRANSPORT_MODE=sse  # Options: stdio (local), sse (production)
MCP_SERVER_NAME=multidb # Server name used in MCP tool prefixes

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root_password
DB_NAME=mydatabase
DB_ROOT_PASSWORD=root_password

# Logging configuration
LOG_LEVEL=debug  # debug, info, warn, error 

# Multi-Database Configuration
DB_CONFIG_FILE=config.json

# Additional Settings
DEBUG=true

# Cursor configuration
# CURSOR_EDITOR=1  # Uncomment to force Cursor mode

# Legacy Single Database Configuration (optional)
DB_TYPE=mysql

# Note: Create a copy of this file as .env and modify it with your own values 